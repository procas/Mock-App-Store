<UserControl x:Class="AppsControl.UserControls.AnApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppsControl.UserControls"
             mc:Ignorable="d" Height="207" Width="200">
    <StackPanel x:Name="Product" Margin="0,0,0,13">
        <Image x:Name="ProductImage" Height="84" Width="93"
          Source="../Images/camera.png"/>
        <TextBox x:Name="ProductName" Text="Camera" IsEnabled="False" Height="20" Width="172"/>
        <Label x:Name="AppInfo" Content="DOWNLOAD&#xD;&#xA;&#xD;&#xA;FREE&#xD;&#xA;" Height="66" Foreground="Black" Background="Black" RenderTransformOrigin="0.5,0.5" Width="173"
              >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.12"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
    </StackPanel>
</UserControl>
